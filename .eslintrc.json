{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "amd": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      },
      "typescript": {
        "directory": "./tsconfig.json"
      }
    }
  },
  "globals": {
    "client": "readonly",
    "user": "readonly"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "multiline-comment-style": [
      "error",
      "starred-block"
    ]
  }
}
