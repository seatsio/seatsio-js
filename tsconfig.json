{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
